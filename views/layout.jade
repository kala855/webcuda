//Layout.jade defines the layout of the entire website. It will contain the navbar and
//extension views will populate pageTitle and pageContent blocks
doctype html
html
  head
    script(type= 'text/javascript', src='/javascripts/textEditor/saveCode.js')
    script(type= 'text/javascript', src= '/javascripts/textEditor/compileCode.js')
    script(type= 'text/javascript', src= '/javascripts/textEditor/runCode.js')
    script(type= 'text/javascript', src='//code.jquery.com/jquery-1.11.0.min.js')

  title= title
  //indicate that our site is mobile optimized
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  //reference our site-specific css
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='/javascripts/lib/codemirror-4.7/lib/codemirror.css')
  script(src='/javascripts/lib/codemirror-4.7/lib/codemirror.js')
  script(src='/javascripts/lib/codemirror-4.7/mode/clike/clike.js')

  //add bootstrap dependencies from CDNjs. Using a CDN to distribute these files puts less pressure
  //on our web server and will be delivered faster to the client than our own server.
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js')
  link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap-theme.min.css')
  link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css')
  block navBar
    //
    nav(class='navbar navbar-default', role='navigation')
      .container-fluid
        .navbar-header
          button(class='navbar-toggle', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sronly
            span.icon-bar
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(class='navbar-brand', href='/#') CUDA Online Compiler
        #bs-example-navbar-collapse-1(class='collapse navbar-collapse')
          ul(class='nav navbar-nav')
            li
              a(href='/compiler/textEditor') Editor Online
            li
              a(href='/compiler/about') About
            li
              a(href='/compiler/agradecimientos') Agradecimientos
            li
              a(href='http://sirius.utp.edu.co/sirius/',target="_blank") SIRIUS

    block pageTitle
      h1#cname #{title}
    block textComponent
